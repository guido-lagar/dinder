        const distanceTop = ctaContainerEl.getBoundingClientRect().top;
        const calc = 1 + distanceTop / (distanceTop + range);

        ctaContainerTitle.style.opacity = calc;
        if (calc > '1') {
            ctaContainerTitle.style.opacity = 1;



        } else if ( calc > '0.6' ) {
            ctaContainerButton.style.display = 'block';

        } else if ( calc < '0' ) {
            ctaContainerTitle.style.opacity = 0;
            ctaContainerButton.style.display = 'none';


        }
      }, false);



    </script>
