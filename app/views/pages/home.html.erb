    <script>

    window.addEventListener('load', function() {
      const ctaContainerEl = document.getElementsByClassName('cta-container')[0];
      ctaContainerEl.style.height = document.documentElement.clientHeight - 40 + 'px';
    })

    const range = 600;
      window.addEventListener('scroll', function() {
        const ctaContainerEl = document.getElementsByClassName('cta-container')[0];
        const ctaContainerTitle = document.getElementsByClassName('cta-title')[0];
        const ctaContainerButton = document.getElementsByClassName('btn')[0];
        const testimonials = document.querySelector('.testimonials');

        const distanceTop = ctaContainerEl.getBoundingClientRect().top;
        const calc = 1 + distanceTop / (distanceTop + range);

        ctaContainerTitle.style.opacity = calc;
        if (calc > '1') {
            ctaContainerTitle.style.opacity = 1;



        } else if ( calc > '0.6' ) {
            ctaContainerButton.style.display = 'block';

        } else if ( calc < '0' ) {
            ctaContainerTitle.style.opacity = 0;
            ctaContainerButton.style.display = 'none';


        }
      }, false);



    </script>
