
<div class="container">

  <h2 class="text-center m-3">Your Dates received</h2>

  <div class="cards">
    <% current_user.receiptors.each do |receiptor| %>
      <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="https://res.cloudinary.com/dmn9i4cwm/image/upload/v1679493153/development/y4f7qugzixnqyq2rvxpft2oeisf9.jpg" class="img-fluid rounded-start" alt="...">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h3 class="card-title"><% receiptor.choice %></h3>
              <p class="card-text">On: 25/03/23</p>
              <p><a href="/choices/<%= receiptor.choice.id %>/edit" class="btn btn-primary">View your picks</a></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  </div>


  <h2 class="text-center m-3">Your Dates sent</h2>

  <div class="cards">
    <% current_user.choices.each do |choice| %>
      <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="https://res.cloudinary.com/dmn9i4cwm/image/upload/v1679493153/development/y4f7qugzixnqyq2rvxpft2oeisf9.jpg" class="img-fluid rounded-start" alt="...">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h3 class="card-title"><% choice.options %></h3>
              <p class="card-text">On: 25/03/23</p>
              <p><a href="#" class="btn btn-primary">View your picks</a></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  </div>
</div>



