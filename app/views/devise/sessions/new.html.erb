<!DOCTYPE html>
<html>
  <head>
    <title>Log In</title>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="pages/_login.scss">
  </head>
  <body>
    <div class="container">
      <h2>Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
        <div class="form-group">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "form-control", placeholder: "Email" } %>
        </div>
        <div class="form-group">
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "form-control", placeholder: "Password" } %>
        </div>
        <div class="form-group form-check">
          <%= f.input :remember_me, as: :boolean, label: false, input_html: { class: "form-check-input" } %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
        <div class="form-group">
          <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
      <div class="links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </body>
</html>
